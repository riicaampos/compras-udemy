<ehcache>

    <diskStore path="java.io.tmpdir" />

    <defaultCache
        name="dafault"
        maxElementsInMemory="10000"
        eternal="false"
        timeToIdleSeconds="3600"
        timeToLiveSeconds="3600"
        overflowToDisk="true"
        diskPersistent="true"
        memoryStoreEvictionPolicy="LRU"
    />

    <cache name="clientes"
           maxElementsInMemory="10000" />

    <cache name="comprasByCliente"
           maxElementsInMemory="10000" />

</ehcache>